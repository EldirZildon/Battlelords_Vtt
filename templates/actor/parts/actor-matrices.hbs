<ol class='items-list'>
  <table>
    <tr>
      <th>{{localize "Power Points"}}</th>
      <th><input name="system.pp" type ="text" value="{{system.pp}}" data-dtype = "Number"></th>
      </tr>
  </table>
  
  {{#each matrices as |matrices matriceLevel|}}
    <li class='item flexrow items-header'>
      <div class='item-name'>
        {{localize 'BATTLELORDS.Item.matrice.matriceLVL' level=matriceLevel}}
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-create'
          title='{{localize "DOCUMENT.Create" type='matrice'}}'
          data-type='matrice'
          data-matrice-level='{{matriceLevel}}'
        >
          <i class='fas fa-plus'></i>
          {{localize 'BATTLELORDS.Item.matrice.AddLVL' level=matriceLevel}}
        </a>
      </div>
    </li>
    {{#each matrices as |item id|}}
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name flexrow'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'><img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              /></a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Edit" type='matrice'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='matrice'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  {{/each}}
</ol>