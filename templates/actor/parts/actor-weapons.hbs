<ol class='weapons-list'>
  <li class='weapon flexrow weapons-header'>
    <div class='weapon-name'>{{localize 'Name'}}</div>
    <div class='weapon-formula'>{{localize 'Roll Formula'}}</div>
    <div class='weapon-controls'>
      <a
        class='weapon-control weapon-create'
        title='{{localize "DOCUMENT.Create" type='Weapon'}}'
        data-type='weapon'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='weapon'}}
      </a>
    </div>
  </li>
  {{#each gear as |weapon id|}}
    <li class='weapon flexrow' data-weapon-id='{{weapon._id}}'>
      <div class='weapon-name'>
        <div class='weapon-image'>
          <a class='rollable' data-roll-type='weapon'>
            <img
              src='{{weapon.img}}'
              title='{{weapon.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{weapon.name}}</h4>
      </div>
      <div class='weapon-formula weapon-prop'>{{weapon.system.formula}}</div>
      <div class='weapon-controls'>
        <a
          class='weapon-control weapon-edit'
          title='{{localize "DOCUMENT.Update" type='Weapon'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='weapon-control weapon-delete'
          title='{{localize "DOCUMENT.Delete" type='Weapon'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>