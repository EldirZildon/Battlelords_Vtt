<form class " {{cssClass}}" autocomplete="off">
    <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{actor.img}}'
      data-edit='img'
      title='{{actor.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{actor.name}}'
          placeholder='Name'
        /></h1>
    </div>
  </header>
    <div class"sidebar">
      <header class='table-header'><th>{{localize "Combat Info"}}</th></header>
        <table>
            <tr>
                <th>{{localize "species"}}</th>
                <th><input name="system.species" type ="text" value="{{system.species}}"></th>
                <th> {{localize "# of actions"}} </th>
                <th> <input name="system.actions" type = "text" value "{{system.actions}}"data-dtype="Number">  </th>
            </tr>
            <tr>
                <th>{{localize "size class"}}</th>
                <th> <input name="system.sc" type ="text" value="{{system.sc}}" data-dtype="Number"> </th>
                <th>{{localize "No. of bumps"}}</th>
                <th> <input name="system.nob" type ="text" value=" {{system.nob}}" data-dtype="Number"> </th>
            </tr>
            <tr>
                <th>{{localize "Berserk/Suicidal"}}</th>
                <th> <input name="system.bs" type ="text" value="{{system.bs}}"> </th>
                <th>{{localize "No. of bumps"}}</th>
                <th> <input name="system.mod" type ="text" value="{{system.mod}}"> </th>
            </tr>
            <tr>
                <th>{{localize "Rank"}}</th>
                <th> <input name="system.rank" type ="text" value="{{system.rank}}"> </th>
                <th>{{localize "Dodge"}}</th>
                <th> <input name="system.dodge" type ="text" value="{{system.dodge}}"> </th>
            </tr> 
            <tr>
                <th>{{localize "Posistion"}}</th>
                <th> <input name="system.position" type ="text" value="{{system.position}}"> </th>
                <th>{{localize "BP"}}</th>
                <th> <input name="system.health" type ="text" value="{{system.health}}"> </th>
            </tr> 
            <tr>
                <th>{{localize "Observation"}}</th>
                <th> <input name="system.observe" type ="text" value="{{system.observe}}"> </th>
                <th>{{localize "Death's door"}}</th>
                <th> <input name="system.dd" type ="text" value="{{system.dd}}"> </th>
            </tr> 
            <tr>
                <th>{{localize "Threshold Rating"}}</th>
                <th> <input name="system.TR" type ="text" value="{{system.TR}}"> </th>
                <th>{{localize "Movement"}}</th>
                <th> <input name="system.mov" type ="text" value="{{system.mov}}"> </th>
            </tr> 
        </table>
        <div class"sidbar2">
           <header class='table-header'><th>{{localize "vitals"}}</th></header>
            <div class="abilities flexcol">
            {{#each system.abilities as |ability key|}}
            <div class="ability flexrow flex-group-center">
              <label for="system.abilities.{{key}}.value" class="resource-label rollable flexlarge align-left" data-roll="0-d100+@abilities.{{key}}.mod" data-label="{{localize (lookup @root.config.abilities key)}}">{{localize (lookup @root.config.abilities key)}}</label>
              <input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}" data-dtype="Number"/>
              <span class="ability-mod rollable" data-roll="0-d100+@abilities.{{key}}.mod" data-label="{{localize (lookup @root.config.abilities key)}}">{{numberFormat ability.mod decimals=0 sign=true}}</span>
            </div>
            {{/each}}
          </div>
        </div>
    </div>
</form>