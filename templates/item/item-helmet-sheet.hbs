<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </div>
  </header>
  <div>
    <table>
      <tr>
        <th> {{localize "BATTLELORDS.armour.thr"}} </th>
        <th> {{localize "BATTLELORDS.armour.abhel"}}</th>
        <th> {{localize "BATTLELORDS.armour.sihel"}} </th>
      </tr>
      <td>
          <input name="system.thr" type ="text" value="{{system.thr}}" data-dtype = "Number">
      </td>
      <td>
          <input name="system.abs" type ="text" value="{{system.abs}}" data-dtype = "Number">
      </td>
      <td>
          <input name="system.si" type ="text" value="{{system.si}}" data-dtype = "Number">
      </td>

    </table>
    <textarea name="system.desciption">{{system.desciption}}</textarea>
  </div>